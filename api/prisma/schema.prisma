// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// ENTITIES 
model Customer {
  id          Int    @id @default(autoincrement())
  companyName String @unique
  firstName   String
  lastName    String
}

model User {
  id        Int    @id @default(autoincrement())
  firstName String
  lastName  String
  phoneNo   String
}

model Driver {
  id        Int    @id @default(autoincrement())
  email     String @unique
  firstName String
  lastName  String
  // employedDate DateTime
  // salary       Float
  // experiance   Int
  // licence   String
}

model Car {
  id            Int    @id @default(autoincrement())
  brand         String
  drivePerLiter String
  cabinPlateNo  Int?
  bodyPlateNo   Int
  capacity      String
  status        String
}

model City {
  id   Int    @id @default(autoincrement())
  name String
}

model SubCity {
  id   Int    @id @default(autoincrement())
  name String
}

// RELATIONS
model Request {
  id            Int      @id @default(autoincrement())
  customerId    Int
  item          String
  tarif         String
  noOfCars      Int
  startingDate  DateTime
  endDate       DateTime
  startingPlace String
  destination   String
  remark        String
}

model CustomerAddress {
  id        Int    @id @default(autoincrement())
  phoneNo   Int
  phoneNo2  Int
  email     String
  cityId    Int
  subCityId Int
}

model UserAddress {
  id        Int    @id @default(autoincrement())
  phoneNo   Int
  phoneNo2  Int
  email     String
  cityId    Int
  subCityId Int
}

model CarDriver {
  id       Int @id @default(autoincrement())
  carId    Int
  driverId Int
}

model order {
  id         Int @id @default(autoincrement())
  userId     Int
  customerId Int
  requestId  Int
  carId      Int
}
